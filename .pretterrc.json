{
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,  // Устаревший jsxBracketSameLine заменён на bracketSameLine
    "arrowParens": "always",   // Рекомендуется использовать always для большей явности
    "proseWrap": "always"
  }
  